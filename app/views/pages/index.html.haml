%h1 Who are you designing for?

%section.featured
  %h2 Random set

  %a.profile.add{:href => new_pack_path}
    %h2 Add new pack

  - @packs.each do |pack|
    - pack.profiles.each do |profile|
      %a.profile.view{:href => pack_path(pack)}
        .image
        %h2=profile.name
        .basics
          = profile.age
          = profile.occupation

        %p= profile.description
        %p= profile.living_situation
        %p= profile.interests
        %p= profile.quote
        %p= profile.ability
        %p= profile.aptitude
        %p= profile.attitude
        %p= profile.bigger_picture
        %p= profile.considerations
        %p.pack= profile.pack

%section.packs
  %h2 Packs
  - @packs.each do |pack|
    %a.pack{ href: pack_path(pack) }
      %h2= pack.name

%section.decks
  %h2 Your decks
  -unless @user
    %h3
      - if !user_signed_in?
        =link_to 'Sign in', new_user_session_path
        to create your own decks
