= form_for @profile do |f|

  - if @profile.errors.any?
    #error_explanation
      %h2
        = pluralize(@profile.errors.count, "error")
        prohibited
        this article from being saved:
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg

  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.submit
