= form_for @profile do |f|

  - if @profile.errors.any?
    #error_explanation
      %h2
        = pluralize(@profile.errors.count, "error")
        prohibited
        this article from being saved:
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg


  = f.label :name
  = f.text_field :name

  = f.label :age
  = f.text_field :age

  = f.label :occupation
  = f.text_field :occupation

  = f.label :description
  = f.text_area :description

  = f.label :strength
  = f.text_field :strength

  = f.label :weakness
  = f.text_field :weakness

  = f.label :considerations
  = f.text_area :considerations

  = f.label :pack
  = f.text_field :pack

  = f.submit :class => 'button'

