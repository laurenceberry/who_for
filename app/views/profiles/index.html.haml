%h1 Listing Profiles

= link_to 'Add profile', new_profile_path

%table
  %tr
    %th Name
    %th Description
    %th{:colspan => "3"}
  - @profiles.each do |profile|
    %tr
      %td= profile.name
      %td= profile.description
      %td= link_to 'Show',profile_path(profile)
      %td= link_to 'Edit', edit_profile_path(profile)
      %td= link_to 'Destroy', profile_path(profile), |
          method: :delete,                          |
          data: { confirm: 'Are you sure?' }        |
