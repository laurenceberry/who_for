= form_for @profile_characteristic_repeatable do |f|
  - if @profile_characteristic_repeatable.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile_characteristic_repeatable.errors.count, "error")} prohibited this profile_characteristic_repeatable from being saved:"
      %ul
        - @profile_characteristic_repeatable.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :profile
    = f.text_field :profile
  .actions
    = f.submit 'Save'
