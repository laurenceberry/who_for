= form_for @profile_quote do |f|
  - if @profile_quote.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile_quote.errors.count, "error")} prohibited this profile_quote from being saved:"
      %ul
        - @profile_quote.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :quote
    = f.text_field :quote
  .field
    = f.label :profile
    = f.text_field :profile
  .actions
    = f.submit 'Save'
