= form_for @pack do |f|

  - if @pack.errors.any?
    #error_explanation
      %h2
        = pluralize(@pack.errors.count, "error")
        prohibited
        this article from being saved:
      %ul
        - @pack.errors.full_messages.each do |msg|
          %li= msg

  = f.file_field :image

  = f.label :name
  = f.text_field :name

  = f.submit :class => 'button'

